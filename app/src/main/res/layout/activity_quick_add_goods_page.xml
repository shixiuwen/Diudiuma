<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:amos="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/view_common_title_view" />-->
    <com.shixia.diudiuma.view.CommonTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        amos:titleName="@string/add_goods"
        amos:btnSureText="@string/sure"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="#8e4ae6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y460"
        android:orientation="horizontal"
        android:background="#8e4ae6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y400"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/x260"
                    android:layout_height="@dimen/y260">

                    <TextView
                        android:layout_width="@dimen/x260"
                        android:layout_height="@dimen/y260"
                        android:layout_centerInParent="true"
                        android:background="#fff" />

                    <ImageView
                        android:id="@+id/img_goods_pic"
                        android:layout_width="@dimen/x250"
                        android:layout_height="@dimen/y250"
                        android:layout_centerInParent="true"
                        android:background="@drawable/default_lose_goods_pic" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_changePic"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y80"
                    android:layout_marginTop="@dimen/y24"
                    android:background="@drawable/common_btn_selector"
                    android:text="@string/change_pic" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y400"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/x260"
                    android:layout_height="@dimen/y260">

                    <TextView
                        android:layout_width="@dimen/x260"
                        android:layout_height="@dimen/y260"
                        android:layout_centerInParent="true"
                        android:background="#fff" />

                    <ImageView
                        android:id="@+id/img_goods_ddm"
                        android:layout_width="@dimen/x250"
                        android:layout_height="@dimen/y250"
                        android:layout_centerInParent="true"
                        android:background="@drawable/default_ddm" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_decode_ddm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y80"
                    android:layout_marginTop="@dimen/y24"
                    android:background="@drawable/common_btn_selector"
                    android:text="@string/decode_ddm" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <com.shixia.diudiuma.view.EditItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        amos:editItemIcon="@drawable/img_hall_01"
        amos:keyText="品名"
        amos:valueText="点击设置"
        android:id="@+id/etv_name"
        android:layout_marginTop="@dimen/y50"/>

    <com.shixia.diudiuma.view.EditItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        amos:editItemIcon="@drawable/img_hall_02"
        amos:keyText="丢失地点"
        amos:valueText="武汉"
        android:id="@+id/etv_address"/>

    <com.shixia.diudiuma.view.EditItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        amos:editItemIcon="@drawable/img_hall_03"
        amos:keyText="悬赏金额"
        amos:valueText="点击设置"
        amos:bottomSplitVisible="false"
        android:id="@+id/etv_money" />

    <com.shixia.diudiuma.view.EditItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        amos:editItemIcon="@drawable/img_hall_04"
        amos:keyText="手机"
        amos:valueText="点击添加"
        android:id="@+id/etv_tel"
        android:layout_marginTop="@dimen/y50"/>

    <com.shixia.diudiuma.view.EditItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        amos:editItemIcon="@drawable/img_hall_05"
        amos:keyText="微信号"
        amos:valueText="点击添加"
        android:id="@+id/etv_wechat"/>

    <com.shixia.diudiuma.view.EditItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        amos:editItemIcon="@drawable/img_hall_06"
        amos:keyText="QQ"
        amos:valueText="点击添加"
        amos:bottomSplitVisible="false"
        android:id="@+id/etv_qq"/>
</LinearLayout>