<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:orientation="horizontal"
    android:padding="@dimen/x24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/x24">

        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"
            android:id="@+id/img_goods_icon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x24">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goods_name"
                    android:id="@+id/tv_goods_name_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_goods_name"
                    android:text="钱包"
                    android:layout_alignBottom="@id/tv_goods_name_title"
                    android:layout_toRightOf="@+id/tv_goods_name_title"
                    android:layout_marginLeft="@dimen/x50"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_goods_lose_date"
                    android:text="@string/loser_date"
                    android:layout_below="@+id/tv_goods_name_title"
                    android:layout_marginTop="@dimen/y24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_goods_lose_address"
                    android:layout_alignBottom="@+id/tv_goods_lose_date"
                    android:text="@string/unknown"
                    android:layout_toRightOf="@id/tv_goods_lose_date"
                    android:layout_marginLeft="@dimen/x50"/>

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y50"
                    android:id="@+id/img_goods_tag"
                    android:layout_below="@+id/tv_goods_lose_date"
                    android:layout_marginTop="@dimen/y24"
                    android:src="@drawable/img_green_tag"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_goods_tag"
                    android:layout_alignBottom="@id/img_goods_tag"
                    android:layout_toRightOf="@+id/img_goods_tag"
                    android:layout_marginLeft="@dimen/x50"
                    android:text="车钥匙 黑色 宝马"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>