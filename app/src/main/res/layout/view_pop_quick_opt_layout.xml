<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="@dimen/x400"
            android:layout_height="@dimen/y800"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y400">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/pop_ll_01">

                    <ImageView
                        android:layout_width="@dimen/x200"
                        android:layout_height="@dimen/y200"
                        android:src="@drawable/pop_quick_opt_01_selector"
                        android:id="@+id/imageView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_find_master"
                        android:layout_marginTop="@dimen/y20"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y400">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/pop_ll_03">

                    <ImageView
                        android:layout_width="@dimen/x200"
                        android:layout_height="@dimen/y200"
                        android:src="@drawable/pop_quick_opt_03_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_find_master"
                        android:layout_marginTop="@dimen/y20"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/x400"
            android:layout_height="@dimen/y800"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y400">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/pop_ll_02">

                    <ImageView
                        android:layout_width="@dimen/x200"
                        android:layout_height="@dimen/y200"
                        android:src="@drawable/pop_quick_opt_02_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_find_master"
                        android:layout_marginTop="@dimen/y20"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y400">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/pop_ll_04">

                    <ImageView
                        android:layout_width="@dimen/x200"
                        android:layout_height="@dimen/y200"
                        android:src="@drawable/pop_quick_opt_04_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_find_master"
                        android:layout_marginTop="@dimen/y20"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>