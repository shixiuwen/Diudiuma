<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:orientation="horizontal"
    android:background="@drawable/recy_goods_item_selector"
    android:padding="@dimen/x24">

    <ImageView
        android:layout_width="@dimen/x260"
        android:layout_height="@dimen/y260"
        android:id="@+id/img_goods_icon"
        android:background="@drawable/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:id="@+id/img_btn_edit_goods_info"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_launcher"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_name"
                android:id="@+id/tv_goods_name_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goods_name"
                android:text="钱包"
                android:layout_alignBottom="@id/tv_goods_name_title"
                android:layout_toRightOf="@+id/tv_goods_name_title"
                android:layout_marginLeft="@dimen/x50"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goods_register_data_title"
                android:text="注册日期"
                android:layout_below="@+id/tv_goods_name_title"
                android:layout_marginTop="@dimen/y24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goods_register_data"
                android:layout_alignBottom="@+id/tv_goods_register_data_title"
                android:text="2015.04.12"
                android:layout_toRightOf="@id/tv_goods_register_data_title"
                android:layout_marginLeft="@dimen/x50"/>

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:id="@+id/img_goods_tag"
                android:layout_below="@+id/tv_goods_register_data_title"
                android:layout_marginTop="@dimen/y24"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goods_tag"
                android:layout_alignBottom="@id/img_goods_tag"
                android:layout_toRightOf="@+id/img_goods_tag"
                android:layout_marginLeft="@dimen/x50"
                android:text="车钥匙 黑色 宝马"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>