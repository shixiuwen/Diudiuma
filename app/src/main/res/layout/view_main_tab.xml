<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y120"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/y1800"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_tab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_tab_main"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_tab_main"
            android:text="首页"
            android:textSize="@dimen/x40" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/y180"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_tab_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_tab_hall"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_tab_hall"
            android:text="首页"
            android:textSize="@dimen/x40" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/y180"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_tab_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_tab_msg"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_tab_msg"
            android:text="首页"
            android:textSize="@dimen/x40" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/y180"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_tab_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_tab_center"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_tab_center"
            android:text="首页"
            android:textSize="@dimen/x40" />
    </RelativeLayout>


</LinearLayout>